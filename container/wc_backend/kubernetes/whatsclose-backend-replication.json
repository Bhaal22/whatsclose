{
  "kind":"ReplicationController",
  "apiVersion":"v1",
  "metadata":{
    "name":"whatsclose-backend",
    "labels":{
      "app":"whatsclose",
      "role":"wc-backend"
    }
  },
  "spec":{
    "replicas":2,
    "selector": {
      "app":"whatsclose",
      "role":"wc-backend"
    },
    "template":{
      "metadata":{
        "labels":{
          "app":"whatsclose",
          "role":"wc-backend"
        }
      },
      "spec":{
        "containers":[
          {
            "name":"whatsclose",
            "image":"whatsclose",
            "ports":[
              {
                "name":"whatsclose-restapi", "containerPort":3000
              }
            ]
          }
        ]
      }
    }
  }
}

