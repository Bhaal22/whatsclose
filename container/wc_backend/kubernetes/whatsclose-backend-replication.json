{
  "kind":"ReplicationController",
  "apiVersion":"v1",
  "metadata":{
    "name":"whatsclose-backend",
    "labels":{
      "app":"whatsclose",
      "role":"wc-backend"
    }
  },
  "spec":{
    "replicas":4,
    "selector": {
      "app":"whatsclose",
      "role":"wc-backend"
    },
    "template":{
      "metadata":{
        "labels":{
          "app":"whatsclose",
          "role":"wc-backend"
        }
      },
      "spec":{
        "containers":[
          {
            "name":"whatsclose",
            "image":"kona.brightcomputing.com:5000/whatsclose",
            "ports":[
              {
                "name":"whatsclose-api", "containerPort":3000
              }
            ],
	          "env": [
              { "name": "NODE_ENV", "value": "dev" },
              { "name": "ELASTICSEARCH_IP", "$WHATSCLOSE_STORAGE_SERVICE_HOST" },
              { "name": "ELASTICSEARCH_PORT", "$WHATSCLOSE_STORAGE_SERVICE_PORT_HTTP" }
            ]
          }
        ]
      }
    }
  }
}

