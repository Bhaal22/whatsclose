{
  "kind":"ReplicationController",
  "apiVersion":"v1",
  "metadata":{
    "name":"whatsclose-storage",
    "labels":{
      "app":"whatsclose",
      "role":"es-storage"
    }
  },
  "spec":{
    "replicas":1,
    "selector": {
      "app":"whatsclose",
      "role":"es-storage"
    },
    "template":{
      "metadata":{
        "labels":{
          "app":"whatsclose",
          "role":"es-storage"
        }
      },
      "spec":{
        "containers":[
          {
            "name":"es",
            "image":"elasticsearch:latest",
            "ports":[
              { "name":"es-rest-api", "containerPort":9200 },
              { "name":"es-internal-api", "containerPort":9300 }
            ]
          }
        ]
      }
    }
  }
}

