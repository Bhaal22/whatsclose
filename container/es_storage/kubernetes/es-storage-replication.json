{
  "kind":"ReplicationController",
  "apiVersion":"v1",
  "metadata":{
    "name":"whatsclose-storage",
    "labels":{
      "app":"whatsclose",
      "role":"es-storage"
    }
  },
  "spec":{
    "replicas":1,
    "selector": {
      "app":"whatsclose",
      "role":"es-storage"
    },
    "template":{
      "metadata":{
        "labels":{
          "app":"whatsclose",
          "role":"es-storage"
        }
      },
      "spec":{
	"volumes": [
      {
        "name": "storage"
      }
    ],
        "containers":[
          {
            "name":"es",
            "image":"elasticsearch:1.4",
            "ports":[
              { "name":"http", "containerPort":9200, "protocol": "TCP" },
              { "name":"transport", "containerPort":9300, "protocol": "TCP" }
            ],
	    "volumeMounts": [
	      { "mountPath": "/data", "name": "storage" }
	    ]
          }
        ]
      }
    }
  }
}

